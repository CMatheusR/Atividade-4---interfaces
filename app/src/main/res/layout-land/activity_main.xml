<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-134dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btBjornMain"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:autoText="true"
                android:background="@drawable/logo"
                android:clickable="true"
                android:text="@string/nome_bjorn"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btRolloMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btRagnarMain" />

            <Button
                android:id="@+id/btRagnarMain"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:autoText="true"
                android:background="@drawable/logo"
                android:clickable="true"
                android:text="@string/nome_ragnar"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toTopOf="@+id/btBjornMain"
                app:layout_constraintEnd_toStartOf="@+id/btFlokiMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btFlokiMain"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:autoText="true"
                android:background="@drawable/logo"
                android:clickable="true"
                android:text="@string/nome_floki"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btLagerthaMain"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:autoText="true"
                android:background="@drawable/logo"
                android:clickable="true"
                android:text="@string/nome_Lagertha"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toTopOf="@+id/btRolloMain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btFlokiMain"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btRolloMain"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:autoText="true"
                android:background="@drawable/logo"
                android:clickable="true"
                android:text="@string/nome_rollo"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btFlokiMain" />

            <Button
                android:id="@+id/btAlthelstanMain"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:autoText="true"
                android:background="@drawable/logo"
                android:clickable="true"
                android:text="@string/nome_athelstan"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btRolloMain"
                app:layout_constraintTop_toBottomOf="@+id/btLagerthaMain" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>